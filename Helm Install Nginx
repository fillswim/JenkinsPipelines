pipeline {
    agent {
        label 'ansible'
    }

    stages {
        stage('Helm install Nginx') {
            steps {
                ansiColor('xterm') {
                    ansiblePlaybook(
                        playbook: '/home/fill/ansible/Helm_Template_Install.yml',
                        inventory: '/home/fill/ansible/hosts.txt',
                        credentialsId: 'Jenkins_PrivateKey',
                        extraVars: [
                            helm_name: 'my-nginx',
                            helm_namespace: 'default',
                            file: '/home/fill/K8SManifests/HelmChart_values_nginx.yaml'
                        ],
                        colorized: true)
                }
            }
        }
    }
}