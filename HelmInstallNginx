pipeline {
    agent {
        label 'ansible'
    }

    stages {
        stage('Helm install Nginx') {
            steps {
                dir('/home/fill/ansible'){
                    sh 'ansible-playbook Helm_Template_Install.yml --extra-var "helm_name=my-nginx helm_namespace=default file=/home/fill/K8SManifests/HelmChart_values_nginx.yaml"'
                }
            }
        }
    }
}